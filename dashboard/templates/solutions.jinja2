{% extends "base.jinja2" %}
{% block content %}
    <div class="container-fluid">
        <h2> {{ problem_id }} ({{ solutions|length }} 件)</h2>
    {#
        表示:
        <a href="{{ url_for("get_solutions", problem_id=problem_id) }}">デフォルト</a>
        <a href="{{ url_for("get_solutions", problem_id=problem_id, invalid=1) }}">Invalid</a>
    #}
        <br>

        <table class="table">
            {% for s in solutions %}
                {% if loop.index0 % 4 == 0 -%}
                    <tr>
                {% endif -%}

            <td class="text-center" id="{{ s.name }}">
                    <a href="/{{ s.svg }}">
                        <img width="300" height="300" src="/{{ s.svg }}">
                    </a>
                <br>
                <dl>
                    <dt> <a href="http://35.221.99.118/repo/solutions/{{ s.name }}">{{ s.name }}</a></dt>
                    <dt> {{ s.score }} </dt>
                </dl>
            </td>

            {% if loop.index0 % 4 == 3 or loop.last -%}
                </tr>
            {% endif -%}
            {% endfor %}
        </table>
    </div>
{% endblock %}

